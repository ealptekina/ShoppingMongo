@model List<ShoppingMongo.Dtos.SliderDtos.ResultSliderDto>
@{
    ViewData["Title"] = "Slider Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Slider Listesi</h2>
    <div class="mb-3">
        <a href="/Sliders/CreateSlider" class="btn btn-success mt-3">+ Yeni Slider Ekle</a>
    </div>
    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th> <!-- Yeni sıra numarası sütunu -->
                <th>Resim</th>
                <th>Başlık</th>
                <th>Alt Başlık</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @{
                int rowNumber = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@rowNumber</td> <!-- Sıra numarası -->
                    <td>
                        <img src="/sliderimages/@item.Image" alt="slider image" style="height: 80px;" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>
                        <a href="/Sliders/UpdateSlider/@item.SliderId" class="btn btn-warning btn-sm">Güncelle</a>
                    </td>
                    <td>
                        <a href="/Sliders/DeleteSlider/@item.SliderId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>

   
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
