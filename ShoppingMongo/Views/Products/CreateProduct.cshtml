@model ShoppingMongo.Dtos.ProductDos.CreateProductDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yeni Ürün Ekle</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Yeni Ürün Ekle</h2>

        <form asp-action="CreateProduct" method="post">
            <div class="form-group">
                <label>Ürün Adı</label>
                <input asp-for="ProductName" class="form-control" />
            </div>

            <div class="form-group">
                <label>Fiyat</label>
                <input asp-for="ProductPrice" class="form-control" />
            </div>

            <div class="form-group">
                <label>Stok Adedi</label>
                <input asp-for="StockCount" class="form-control" />
            </div>

            <div class="form-group">
                <label>Görsel URL</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>

            <div class="form-group">
                <label>Durum</label>
                <input asp-for="Status" type="checkbox" />
            </div>

            <div class="form-group">
                <label>Kategori</label>
                @Html.DropDownListFor(model => model.CategoryId, (List<SelectListItem>)ViewBag.v, "Kategori Seçiniz", new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-success mt-3">Ürünü Kaydet</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
