@model ShoppingMongo.Dtos.ProductDos.GetProductByIdDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ürün Güncelle</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Ürün Güncelle</h2>
        <form asp-action="UpdateProduct" asp-controller="Product" method="post">
            <input type="hidden" asp-for="ProductId" />

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="ProductPrice" class="form-label"></label>
                <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" />
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="StockCount" class="form-label"></label>
                <input asp-for="StockCount" class="form-control" type="number" />
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Kategori</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.v">
                    <option value="">Kategori Seçiniz</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</body>
</html>
