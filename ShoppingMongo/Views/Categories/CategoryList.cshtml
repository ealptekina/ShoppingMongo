@model List<ShoppingMongo.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Kategori Liste";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Kategori Listesi</h2>
    <div class="mb-3">
        <a href="/Categories/CreateCategory/" class="btn btn-success">+ Yeni Kategori Ekle</a>
    </div>
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width: 5%;">#</th>  <!-- Sıra numarası -->
                <th style="width: 15%;">Görsel</th>  <!-- Görsel sütunu -->
                <th>Kategori Adı</th>
                <th style="width: 30%;">Açıklama</th> <!-- Açıklama sütunu eklendi -->
                <th style="width: 10%;">Güncelle</th>
                <th style="width: 10%;">Sil</th>
            </tr>
        </thead>
        <tbody>
            @{
                int rowNumber = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" alt="Kategori Görseli"
                                 style="width:100px; height:80px; object-fit:contain; border-radius:4px; border:1px solid #ccc;" />
                        }
                        else
                        {
                            <span class="text-muted">Görsel yok</span>
                        }
                    </td>
                    <td>@item.CategoryName</td>
                    <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 300px;">
                        @item.Description
                    </td>
                    <td>
                        <a href="/Categories/UpdateCategory/@item.CategoryId" class="btn btn-warning btn-sm">Güncelle</a>
                    </td>
                    <td>
                        <a href="/Categories/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
