@model List<ShoppingMongo.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Kategori Liste";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Kategori Listesi</h2>
    <div class="mb-3">
        <a href="/Categories/CreateCategory/" class="btn btn-success">+ Yeni Kategori Ekle</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>  <!-- Sıra numarası sütunu -->
                <th>Kategori Adı</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @{
                int rowNumber = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@rowNumber</td> <!-- Sıra numarası -->
                    <td>@item.CategoryName</td>
                    <td>
                        <a href="/Categories/UpdateCategory/@item.CategoryId" class="btn btn-warning btn-sm">Güncelle</a>
                    </td>
                    <td>
                        <a href="/Categories/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>

   
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
