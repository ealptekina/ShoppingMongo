{
  // MongoDB bağlantı ve koleksiyon ayarları
  "DatabaseSettingsKey": {
    "ConnectionString": "mongodb://localhost:27017", // MongoDB sunucusunun bağlantı adresi
    "DatabaseName": "ShoppingDb", // Kullanılacak veritabanının adı
    "CategoryCollectionName": "Categories", // Kategorilerin saklandığı koleksiyon adı
    "ProductCollectionName": "Products", // Ürünlerin saklandığı koleksiyon adı
    "CustomerCollectionName": "Customers",
    "SliderCollectionName":  "Sliders"// Müşterilerin saklandığı koleksiyon adı
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
